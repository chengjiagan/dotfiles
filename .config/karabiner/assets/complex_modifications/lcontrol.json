{
  "title": "caps_lock mod",
  "rules": [
    {
      "description": "caps_lock to left_control if press with other keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": [
                "any"
              ]
            },
            "key_code": "caps_lock"
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    }
  ]
}
