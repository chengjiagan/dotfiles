{
  "title": "left control mod",
  "rules": [
    {
      "description": "left_control to capslock if press alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": [
                "any"
              ]
            },
            "key_code": "left_control"
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    },
    {
      "description": "left control + space as right shift",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "caps_lock"
              ]
            },
            "key_code": "spacebar"
          },
          "to": [
            {
              "key_code": "right_shift"
            }
          ]
        }
      ]
    }
  ]
}
